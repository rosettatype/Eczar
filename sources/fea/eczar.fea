#----------------------------------------------------------------------------
# Access all alternates

feature aalt {
	feature locl;
	feature sups;
	feature numr;
	feature dnom;
	feature ordn;
	feature pnum;
	feature tnum;
	feature case;
	feature ss01;
	feature ss02;
	feature ss03;
	feature ss05;
	feature ss06;

	sub period by ellipsis;
	sub hyphen from [endash emdash];
} aalt;



